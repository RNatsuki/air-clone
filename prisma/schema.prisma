generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Device {
  mac         String  @id
  ip          String?
  hostname    String?
  model       String?
  ssid        String?
  firmware    String?
  sshUsername String
  sshPassword String
  lastSeen    DateTime @updatedAt
  cpu         Float?
  memory      Float?
  uptime      Int?     // segundos
  signal      Int?     // dBm
}

